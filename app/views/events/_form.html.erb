<%= form_for(@event) do |f| %>
    日付
    <%= f.select :year, [["2018","2018"],["2019","2019"],["2020","2020"]], :selected => "#{flash[:y]}" %>
    <%= f.select :month, [["1","01"],["2","02"],["3","03"],["4","04"],["5","05"],["6","06"],["7","07"],["8","08"],["9","09"],["10","10"],["11","11"],["12","12"]], :selected => "#{flash[:m]}" %>
    <%= f.select :date, [["1","01"],["2","02"],["3","03"],["4","04"],["5","05"],["6","06"],["7","07"],["8","08"],["9","09"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"],["16","16"],["17","17"],["18","18"],["19","19"],["20","20"],["21","21"],["22","22"],["23","23"],["24","24"],["25","25"],["26","26"],["27","27"],["28","28"],["29","29"],["30","30"],["31","31"]], :selected => "#{flash[:d]}" %><br />
    <br>
    <!--もし@postにエラーがあったら-->
    <% if @event.errors.any? %>
    <!--順序無しリスト-->
    <ul>
        <!--エラーの数だけループ-->
        <% @event.errors.full_messages.each do |msg| %>
        <!--メッセージの内容を表示   -->
        <li>
            <%= msg %>
        </li>
        <% end %>
    </ul>
    <% end %>

    <!--titleに対するテキストフィールド-->
    <div class="field">
        <!--titleに対するテキストフィールド-->
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <br>
    <!--contentに対するテキストエリア（５行分）-->
    <div class="field">
        <%= f.label :content %>
        <%= f.text_area :content, :rows => 5 %>
    </div>
    <br>
    <!--送信ボタン（createメソッドへ）-->
    <div class="actions">
        <%= f.submit %>
    </div>
<br>
<% end %>